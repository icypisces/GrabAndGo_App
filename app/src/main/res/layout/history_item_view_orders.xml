<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/order_items_orange" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_textView_itemViewOrders"
                android:text="@string/buyer_orderTime" />

            <TextView
                android:id="@+id/tvOrdertime"
                style="@style/style_textView_itemViewOrders_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_textView_itemViewOrders"
                android:text="@string/soNumber" />

            <TextView
                android:id="@+id/tvSoNumber"
                style="@style/style_textView_itemViewOrders_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_textView_itemViewOrders"
                android:text="@string/buyer_name" />

            <TextView
                android:id="@+id/tvBuyerName"
                style="@style/style_textView_itemViewOrders_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_textView_itemViewOrders"
                android:text="@string/buyer_phone" />

            <TextView
                android:id="@+id/tvBuyerPhone"
                style="@style/style_textView_itemViewOrders_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_textView_itemViewOrders"
                android:text="@string/soAmount" />

            <TextView
                android:id="@+id/tvAmount"
                style="@style/style_textView_itemViewOrders_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_textView_itemViewOrders"
                android:text="@string/buyer_picktime" />

            <TextView
                android:id="@+id/tvPicktime"
                style="@style/style_textView_itemViewOrders_value" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>