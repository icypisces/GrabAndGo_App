<resources>
    <!-- ********************************** editText ********************************** -->
    <style name="style_editText_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="style_editText_register" parent="style_editText_login">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="style_editText_information" parent="style_editText_login">
        <item name="android:background">@drawable/edit_text_information</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="style_editText_edit" parent="style_editText_information">
        <item name="android:focusable">true</item>
    </style>

    <style name="style_editText_noEdit" parent="style_editText_information">
        <item name="android:background">@drawable/edit_text_information_can_not</item>
    </style>

    <style name="style_editText_search" parent="style_editText_login">
        <item name="android:background">@drawable/edit_text_information</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <!-- ******************************* textInputLayout ******************************* -->
    <style name="style_textInputLayout_register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="style_textInputLayout_profile" parent="style_textInputLayout_register">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="style_textInputLayout_order" parent="style_textInputLayout_profile">
        <item name="android:layout_width">250dp</item>
    </style>
    <!-- *********************************** textView *********************************** -->
    <style name="style_textView_information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="style_textView_itemViewOrders">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_textView_itemViewOrders_value" parent="style_textView_itemViewOrders">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_textView_itemViewOrders_detail_top" parent="style_textView_itemViewOrders">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_textView_itemViewOrders_detail_top_value" parent="style_textView_itemViewOrders_detail_top">
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="style_textView_itemViewOrders_detail" parent="style_textView_itemViewOrders">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

</resources>